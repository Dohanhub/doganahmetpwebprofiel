# Local Development Environment
NODE_ENV=development
PORT=5000

# Database - Update with your actual database credentials
DATABASE_URL=postgresql://postgres:password@localhost:5432/dogan_ahmet

# Security - Generate strong random secrets for production
SESSION_SECRET=dev-session-secret-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production

# OpenAI - Add your API key if using AI features
# OPENAI_API_KEY=your-openai-api-key-here

# Logging
LOG_LEVEL=debug

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
