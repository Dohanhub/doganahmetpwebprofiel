# Production Environment Variables for Vercel Deployment
# Copy these to your Vercel project settings -> Environment Variables
# IMPORTANT: Replace all placeholder values with actual production values

# Application
NODE_ENV=production
PORT=3000

# Database (Required - Get from Neon Console)
# Example: postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=REPLACE_WITH_ACTUAL_NEON_DATABASE_URL

# Security (Required - Generate strong secrets using crypto.randomBytes(32).toString('hex'))
# Generate new secrets for production: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=REPLACE_WITH_32_CHAR_RANDOM_SECRET
JWT_SECRET=REPLACE_WITH_32_CHAR_RANDOM_SECRET

# OpenAI (Required for chat functionality)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=REPLACE_WITH_ACTUAL_OPENAI_API_KEY
OPENAI_MODEL=gpt-4o-mini

# Logging
LOG_LEVEL=info

# CORS (Update with your actual domains)
ALLOWED_ORIGINS=https://doganahmet.com,https://www.doganahmet.com,https://doganahmetprofile.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email (Optional - for contact form notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
